<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DriverAcceptDeclineFragment">

    <TextView
        android:id="@+id/txtDriverAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Accept or Decline Orders"
        />
    <Button
        android:id="@+id/btnDeclineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="27dp"
        android:layout_below="@id/txtDriverAccept"
        android:layout_alignParentEnd="true"
        android:text="Decline"
        android:backgroundTint="@color/red"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyDriverOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDeclineButton"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/AcceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rcyDriverOrders"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/green"
        android:text="Accept Order"
        android:textSize="35sp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_centerHorizontal="true"
        tools:ignore="VisualLintButtonSize"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/SourceLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/DestinationLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDeclineButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="4dp"
        android:text="Destination:"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>