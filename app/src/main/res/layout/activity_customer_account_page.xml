<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerAccountPage">

    <TextView
        android:id="@+id/txtAccountDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/accent"
        android:text="Account Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txtCustomerGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/txtAccountDetails"
        android:layout_marginTop="20dp"

        android:text="Hi, Custumer name"

        />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Email"
        android:textSize="25sp"
        android:layout_below="@id/txtCustomerGreeting"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textSize="25sp"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Password"
        android:textSize="25sp"
        android:layout_below="@id/txtName"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Address"
        android:textSize="25sp"
        android:layout_below="@id/txtPassword"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Phone Number"
        android:textSize="25sp"
        android:layout_below="@id/txtAddress"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Notifications"
        android:textSize="25sp"
        android:layout_below="@id/txtPhoneNumber"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtGiftCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Gift Cards"
        android:textSize="25sp"
        android:layout_below="@id/txtNotifications"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txtPayments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Payments"
        android:textSize="25sp"
        android:layout_below="@id/txtGiftCards"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Log Out"
        android:textColor="@color/red"
        android:onClick="activity_main"
        android:textSize="15sp"
        android:layout_below="@id/txtPayments"
        android:layout_marginTop="29dp"
        />

</RelativeLayout>