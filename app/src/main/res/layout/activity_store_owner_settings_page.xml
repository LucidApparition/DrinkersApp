<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreOwnerSettingsPage">

    <TextView
        android:id="@+id/txtStore_Owner_Settings"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:background="@color/accent"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="127dp" />

    <TextView
        android:id="@+id/txtNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/txtStore_Owner_Settings"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"

        />

    <TextView
        android:id="@+id/txtFAQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@id/txtNotifications"
        android:layout_marginTop="300dp"
        android:textSize="40sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/txtKnowledgeBase"
        android:layout_width="223dp"
        android:layout_height="52dp"
        android:layout_below="@id/txtFAQ"
        android:text="Please visit out knowledge base for frequently asked questions."
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"

        />

    <TextView
        android:id="@+id/txtContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/txtKnowledgeBase"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/txtContactInfo"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContact"
        android:layout_marginTop="-5dp"
        android:layout_centerHorizontal="true"
        android:text="You can contact us through phone Mon-Sat 9AM-10PM, by emailing us"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: (111)-123-1234"
        android:layout_below="@id/txtContactInfo"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"

        />
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPhone"
        android:layout_centerHorizontal="true"
        android:text="Email: support@drinkers.com"
        android:textAlignment="center"
        android:textSize="15sp"

        />


</RelativeLayout>